package day06.practice;

import java.util.Scanner;

public class 실습문제1_1 {

	public static void main(String[] args) {
		
		
		//1. 화폐매수 구하기 문제
		//  : 사원명과 출장비가 입력될 때 출장비에 대한 화폐매수(고액권부터)를 구하시오
		//    화폐단위는 다음과 같다 50000, 10000, 5000, 1000, 500, 100, 50, 10

		
		//1) 사원명과 출장비가 입력되면 화폐매수를 출력하는 프로그램을 작성하시오
		
		Scanner sc = new Scanner(System.in);
		String name;
		int price;
		
		//배열사용X
		System.out.print("이름을 입력하세요: ");
		name = sc.next();
		System.out.print("출장비를 입력하세요: ");
		price = sc.nextInt();
		
		
		int cnt50000 = price/50000;
		price=price%50000;
		
		int cnt10000 = price/10000;
		price=price%10000;
		
		int cnt5000 = price/5000;
		price=price%5000;
		
		int cnt1000 = price/1000;
		price=price%1000;
		
		int cnt500 = price/500;
		price=price%500;
		
		int cnt100 = price/100;
		price=price%100;
		
		int cnt50 = price/50;
		price=price%50;
		
		int cnt10 = price/10;
		price=price%10;
		
		System.out.println("오만원: "+cnt50000+", 만원: "+cnt10000+", 오천원: "+cnt5000+", 천원: "+cnt1000
							+", 오백원: "+cnt500+", 백원: "+cnt100+", 오십원: "+cnt50+", 십원: "+cnt10);
		
		
		//배열 사용O
		System.out.print("이름을 입력하세요: ");
		name = sc.next();
		System.out.print("출장비를 입력하세요: ");
		price = sc.nextInt();
		
		String[] money = {"오만원","만원","오천원","천원","오백원","백원","오십원","십원"};
		int[] cnt = new int[8];
		//이걸 배열로 어케해?? ??
		cnt[0] = price/50000;
		price=price%50000;
		cnt[1] = price/10000;
		price=price%10000;
		cnt[2] = price/5000;
		price=price%5000;
		cnt[3] = price/1000;
		price=price%1000;
		cnt[4] = price/500;
		price=price%500;
		cnt[5] = price/100;
		price=price%50000;
		cnt[6] = price/50;
		price=price%50;
		cnt[7] = price/50;
		price=price%10;
		
		for(int i=0; i<money.length-1; i++) {
			System.out.printf(money[i]);
			System.out.print(": "+cnt[i]+" ");
		}
	}

}
